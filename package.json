{
  "name": "hush-api",
  "version": "0.0.0",
  "description": "Hust API",
  "author": "Jake Klassen",
  "license": "MIT",
  "scripts": {
    "db:init": "ts-node scripts/db-init.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.3.7",
    "@nestjs/core": "^5.3.7",
    "@nestjs/typeorm": "^5.2.2",
    "@sendgrid/mail": "^6.3.1",
    "@types/luxon": "^1.2.2",
    "class-transformer": "^0.1.9",
    "class-transformer-validator": "^0.6.0",
    "class-validator": "^0.9.1",
    "cuid": "^2.1.4",
    "dotenv": "^6.0.0",
    "dotenv-parse-variables": "^0.2.0",
    "luxon": "^1.3.3",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.2",
    "shortid": "^2.2.13",
    "typeorm": "^0.2.7",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.3.7",
    "@types/chance": "^1.0.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.10.1",
    "@types/sinon": "^5.0.2",
    "@types/supertest": "^2.0.6",
    "chance": "^1.0.16",
    "jest": "^23.6.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "sinon": "^6.3.4",
    "supertest": "^3.1.0",
    "ts-jest": "^23.10.0",
    "ts-loader": "^5.1.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.6.0",
    "tslint": "5.11.0",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
